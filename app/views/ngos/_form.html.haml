= form_for(@ngo) do |f|
  - if @ngo.errors.any?
    #error_explanation
      %h2
        = pluralize(@ngo.errors.count, "error")
        prohibited this ngo from being saved:
      %ul
        - @ngo.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :address_line1
    %br/
    = f.text_field :address_line1
  .field
    = f.label :address_line2
    %br/
    = f.text_field :address_line2
  .field
    = f.label :city
    %br/
    = f.text_field :city
  .field
    = f.label :state
    %br/
    = f.text_field :state
  .field
    = f.label :country
    %br/
    = f.text_field :country
  .field
    = f.label :pincode
    %br/
    = f.text_field :pincode
  .field
    = f.label :registration_date
    %br/
    = f.date_select :registration_date
  .field
    = f.label :registration_number
    %br/
    = f.text_field :registration_number
  .field
    = f.label :domain_id
    %br/
    = f.number_field :domain_id
  .field
    = f.label :contact_number
    %br/
    = f.text_field :contact_number
  .field
    = f.label :website
    %br/
    = f.text_field :website
  .field
    = f.label :email
    %br/
    = f.text_field :email
  .field
    = f.label :password
    %br/
    = f.text_field :password
  .actions
    = f.submit
